{
  "manifest_version": 2,
  "name": "YouTube DeSlop",
  "version": "1.0",
  "description": "Remove AI slop from your YouTube feed. Blocklist-driven.",
  "author": "Nikoboi",
  "icons": {
    "32": "icons/favicon_32x32.png",
    "64": "icons/favicon_64x64.png",
    "128": "icons/favicon_128x128.png",
    "144": "icons/favicon_144x144.png"
  },
  "permissions": [
    "https://www.youtube.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "deslop.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "deslop-bg.js"
    ],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-deslop@nikoboi.dev",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}
